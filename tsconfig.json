{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "types": [
      "@types/node"
    ],
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ]
}